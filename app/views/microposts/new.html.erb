<h1>New micropost</h1>

<%= error_messages_for :micropost %>

<% form_for(@micropost) do |f| %>
  <p>
    <b>Content</b><br />
    <%= f.text_field :content %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', microposts_path %>
